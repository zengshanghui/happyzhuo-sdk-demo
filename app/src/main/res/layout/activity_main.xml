<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent" android:layout_centerInParent="true"
        android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center">
        <Button android:id="@+id/bt_inst"
            android:layout_width="wrap_content" android:layout_margin="16dp"
            android:layout_height="wrap_content" android:text="插屏广告"  />

        <Button android:id="@+id/bt_reward"
            android:layout_width="wrap_content" android:layout_margin="16dp"
            android:layout_height="wrap_content" android:text="奖励广告"  />

        <Button android:id="@+id/bt_purchase"
            android:layout_width="wrap_content" android:layout_margin="16dp"
            android:layout_height="wrap_content" android:text="购买商品" />

    </LinearLayout>

    <com.happyzhuo.sdk.api.BannerLayout
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>

</RelativeLayout>